    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:id="@+id/lvlPick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gameAi3"
            android:textSize="27sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/easyLvl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/easyLvl"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/btnalertbackground1"
            android:text="@string/gameAi4"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/midLvl"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/midLvl"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/btnalertbackground2"
            android:text="@string/gameAi5"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/hardLvl"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/easyLvl"
            app:layout_constraintTop_toTopOf="@+id/easyLvl" />

        <Button
            android:id="@+id/hardLvl"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/btnalertbackground3"
            android:text="@string/gameAi6"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/midLvl"
            app:layout_constraintTop_toTopOf="@+id/easyLvl" />

